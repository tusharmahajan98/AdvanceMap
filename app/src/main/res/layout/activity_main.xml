<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="GPS Lat"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/gps_lat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="GPS Lat"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="33dp"
            tools:layout_editor_absolutlyX="420p"
            tools:layout_editor_absolutlyY="420p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lng"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/lat"
            android:layout_weight="1"
            android:text="GPS Lng"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="87dp" />

        <TextView
            android:id="@+id/gps_lng"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/lat"
            android:layout_weight="1"
            android:text="GPS Lng"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="87dp"
            tools:layout_editor_absolutlyX="420p"
            tools:layout_editor_absolutlyY="420p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/lng"
            android:layout_weight="1"
            android:text="speed"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="190dp" />

        <TextView
            android:id="@+id/gps_speed"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/lng"
            android:layout_weight="1"
            android:text="speed"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="190dp"
            tools:layout_editor_absolutlyX="420p"
            tools:layout_editor_absolutlyY="420p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bearing"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/speed"
            android:layout_weight="1"
            android:text="GPS bearing"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="145dp" />

        <TextView
            android:id="@+id/gps_bearing"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/speed"
            android:layout_weight="1"
            android:text="GPS bearing"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="145dp"
            tools:layout_editor_absolutlyX="420p"
            tools:layout_editor_absolutlyY="420p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/bearing"
            android:layout_weight="1"
            android:text="GPS Time"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="313dp" />

        <TextView
            android:id="@+id/gps_time"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/bearing"
            android:layout_weight="1"
            android:text="GPS Time"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="313dp"
            tools:layout_editor_absolutlyX="420p"
            tools:layout_editor_absolutlyY="420p" />
    </LinearLayout>

</LinearLayout>